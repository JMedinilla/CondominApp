<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/detail_incident_image"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:contentDescription="@string/contentDescription" />

            <TextView
                android:id="@+id/detail_incident_user_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/detail_incident_image"
                android:layout_alignStart="@id/detail_incident_image"
                android:layout_below="@id/detail_incident_image"
                android:layout_margin="2dp"
                android:text="@string/detail_incident_user_default"
                android:textColor="@color/cardview_dark_background"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_incident_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/detail_incident_image"
                android:layout_alignStart="@id/detail_incident_image"
                android:layout_below="@id/detail_incident_user_default"
                android:layout_margin="2dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/detail_incident_date_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/detail_incident_image"
                android:layout_alignStart="@id/detail_incident_image"
                android:layout_below="@id/detail_incident_user"
                android:layout_margin="2dp"
                android:text="@string/detail_incident_date_default"
                android:textColor="@color/cardview_dark_background"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_incident_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/detail_incident_image"
                android:layout_alignStart="@id/detail_incident_image"
                android:layout_below="@id/detail_incident_date_default"
                android:layout_margin="2dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/detail_incident_description_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/detail_incident_image"
                android:layout_alignStart="@id/detail_incident_image"
                android:layout_below="@id/detail_incident_date"
                android:layout_margin="2dp"
                android:text="@string/detail_incident_description_default"
                android:textColor="@color/cardview_dark_background"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_incident_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/detail_incident_image"
                android:layout_alignStart="@id/detail_incident_image"
                android:layout_below="@id/detail_incident_description_default"
                android:layout_margin="2dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>