<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/adapterIncident_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/ic_image_black" />

        <LinearLayout
            android:id="@+id/adapterIncident_linear"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/adapterIncident_img"
            android:layout_toRightOf="@+id/adapterIncident_img"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapterIncident_txtTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:maxEms="22"
                android:maxLength="22"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/adapterIncident_txtDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/adapterIncident_txtContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/adapterIncident_linear"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/adapterIncident_img"
            android:layout_toRightOf="@id/adapterIncident_img"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="#666666"
            android:textSize="12sp" />

        <com.sackcentury.shinebuttonlib.ShineButton
            android:id="@+id/adapterIncident_like"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:color/darker_gray"
            app:allow_random_color="false"
            app:big_shine_color="#FFEB3B"
            app:btn_color="@android:color/darker_gray"
            app:btn_fill_color="#FFEB3B"
            app:click_animation_duration="200"
            app:enable_flashing="false"
            app:shine_animation_duration="1800"
            app:shine_count="24"
            app:shine_turn_angle="160"
            app:siShape="@raw/star"
            app:small_shine_color="#FFF176"
            app:small_shine_offset_angle="120" />
    </RelativeLayout>

</android.support.v7.widget.CardView>